{
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
  "terminal.integrated.fontFamily": "Ubuntu Mono, Consolas",
  "terminal.integrated.fontSize": 15,
  // setup the terminal for wsl
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  "workbench.colorTheme": "Material Theme Palenight",
  "workbench.panel.defaultLocation": "right",
  "editor.fontSize": 15,
  "window.zoomLevel": 0.3,
  // make the editor not look bad
  "files.eol": "\n",
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "javascript.preferences.quoteStyle": "single",
  // make files guud
  "editor.selectionHighlight": false,
  "javascript.validate.enable": false,
  "editor.occurrencesHighlight": false,
  "atomKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  // make editing not painful
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "jsDocCompletion.enabled": false,
  "telemetry.enableTelemetry": false,
  // No! I don't want that!
  "debug.openDebug": "neverOpen",
  "debug.internalConsoleOptions": "neverOpen",
  "debug.showInStatusBar": "never",
  // stop showing me the debug thing
  "workbench.colorCustomizations": {
    "editorWarning.foreground": "#FFAA0044",
  },
  "beautify.config": {
    "html": {
      "allowed_file_extensions": ["htm", "html", "xhtml", "shtml", "xml", "svg", "dust"],
      "brace_style": "collapse",
      "end_with_newline": true,
      "indent_char": " ",
      "indent_handlebars": true,
      "indent_inner_html": false,
      "indent_scripts": "keep",
      "indent_size": 2,
      "max_preserve_newlines": 2,
      "preserve_newlines": true,
      "unformatted": [
        "a", "span", "img", "code", "pre",
        "sub", "sup", "em", "strong", "b",
        "i", "u", "strike", "big", "small",
        "pre", "h1", "h2", "h3", "h4", "h5",
        "h6",
      ],
      "wrap_line_length": 0,
    },
    "css": {
      "allowed_file_extensions": ["css", "scss", "sass", "less"],
      "end_with_newline": true,
      "indent_char": " ",
      "indent_size": 2,
      "newline_between_rules": true,
      "selector_separator": " ",
      "selector_separator_newline": true,
      "preserve_newlines": true,
      "max_preserve_newlines": 2,
    },
  },
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",
  "java.errors.incompleteClasspath.severity": "ignore",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,
  "shellcheck.useWSL": true
}
