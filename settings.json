{
  // setup the terminal for wsl
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "Ubuntu Mono, Consolas",
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
  // setup other things for wsl
  "shellcheck.useWSL": true,
  "crystal-lang.bashOnWindows": true,
  "crystal-lang.compiler": "crystal.bat",
  // git
  "git.defaultCloneDirectory": "C:\\Users\\Alf\\Desktop",
  // make the editor not look bad
  "editor.fontSize": 15,
  "window.zoomLevel": 0.3,
  "workbench.panel.defaultLocation": "right",
  "workbench.colorTheme": "Material Theme Palenight",
  "workbench.iconTheme": "eq-material-theme-icons-palenight",
  // make files guud
  "files.eol": "\n",
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "javascript.preferences.quoteStyle": "single",
  // make editing not painful
  "editor.selectionHighlight": false,
  "javascript.validate.enable": false,
  "atomKeymap.promptV3Features": true,
  "editor.occurrencesHighlight": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.startupEditor": "newUntitledFile",
  // No! I don't want that!
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "jsDocCompletion.enabled": false,
  "telemetry.enableTelemetry": false,
  "extensions.ignoreRecommendations": true,
  // stop showing me the debug thing
  "debug.openDebug": "neverOpen",
  // "debug.showInStatusBar": "never",
  "explorer.confirmDragAndDrop": false,
  "debug.internalConsoleOptions": "neverOpen",
  "workbench.colorCustomizations": {
    "editorWarning.foreground": "#ffbb004e",
  },
  "beautify.config": {
    "html": {
      "allowed_file_extensions": [
        "htm", "html", "xhtml",
        "shtml", "xml", "svg", "dust"
      ],
      "brace_style": "collapse",
      "end_with_newline": true,
      "indent_char": " ",
      "indent_handlebars": true,
      "indent_inner_html": false,
      "indent_scripts": "keep",
      "indent_size": 2,
      "max_preserve_newlines": 2,
      "preserve_newlines": true,
      "unformatted": [
        "a", "span", "img", "code", "pre",
        "sub", "sup", "em", "strong", "b",
        "i", "u", "strike", "big", "small",
        "pre", "h1", "h2", "h3", "h4", "h5",
        "h6",
      ],
      "wrap_line_length": 0,
    },
    "css": {
      "allowed_file_extensions": ["css", "scss", "sass", "less"],
      "end_with_newline": true,
      "indent_char": " ",
      "indent_size": 2,
      "newline_between_rules": true,
      "selector_separator": " ",
      "selector_separator_newline": true,
      "preserve_newlines": true,
      "max_preserve_newlines": 2,
    },
  },
  "d.dubPath": "C:\\Users\\Alf\\AppData\\Roaming\\code-d\\bin\\dub.exe",
  "d.servedPath": "C:\\Users\\Alf\\AppData\\Roaming\\code-d\\bin\\serve-d.exe",
  "shellcheck.disableVersionCheck": true,
  // make Fava editing faster
  "java.autobuild.enabled": false,
  "java.configuration.updateBuildConfiguration": "disabled",
  "java.format.enabled": false,
  "java.format.comments.enabled": false,
  "java.import.maven.enabled": false,
  "java.progressReports.enabled": false,
  "java.errors.incompleteClasspath.severity": "ignore",
}
