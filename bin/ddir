#!/bin/bash
DDIR_PATH=~/DDIR.txt
if test "$#" -ne 2; then
  echo "${RED}Illegal number of parameters"
  exit 0;
fi
if [ $1 = "login" ]; then
  if [ -e $DDIR_PATH ]; then
    cd "$(<$DDIR_PATH)"
  fi
elif [[ $1 = "set" || $1 = "enable" ]]; then
  pwd > $DDIR_PATH
  echo "${GREEN}Enabled default directory at \"$(pwd)\"!"
elif [ $1 = "disable" ]; then
  rm $DDIR_PATH
  echo "${MAGENTA}Disabled!"
fi
