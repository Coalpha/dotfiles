#!/bin/bash
if test "$#" -ne 1; then
  echo "${red}Illegal number of parameters"
  exit 0;
fi
if [ $1 = "login" ]; then
  if [ -e ~/ddir.txt ]; then
    cd "$(<~/ddir.txt)" || exit 1
  fi
elif [[ $1 = "set" || $1 = "enable" ]]; then
  pwd > ~/ddir.txt
  echo "${green}Enabled default directory at \"$(pwd)\"!"
elif [ $1 = "disable" ]; then
  rm ~/ddir.txt
  echo "${yellow}Disabled!"
fi
